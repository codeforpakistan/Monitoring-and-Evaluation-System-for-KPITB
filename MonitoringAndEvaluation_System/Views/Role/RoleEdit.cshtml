@model ModelLayer.MainViewModel.EditRoleVM
@{
    ViewBag.Title = "RoleCreateView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- START row-->
<div class="row">
    <div class="col-xl-12">
        <!-- START card-->
        <div class="card card-default">
            <div class="card-header">
                <div class="card-title">Role Form</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    @using (Html.BeginForm("RoleEdit", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.HiddenFor(m=>m.RoleID)
                        <div class="row">
                            <div class="col-lg-12">
                                @Html.DisplayFor(m => m.RoleName, new { @class = "col-form-label" })
                                @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control", @placeholder = "Please Enter RoleName" })
                                @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "parsley-required" })
                            </div>
                        </div>

                        <br />
                        <div class="required">* Required fields</div>
                        <!--Popup Msg-->

                        if (TempData["Message"] != null)
                        {
                            <div id="divMessage" class="alert alert-success d-inline-flex" role="alert">
                                <strong>@TempData["Message"]</strong>
                            </div>
                        }
                        <hr />
                        <div class="float-right">
                            <button class="btn btn-primary" type="submit">Update</button>
                        </div>
                        <br />
                    }
                </div>
            </div>
        </div>
        <!-- END card-->
    </div>
</div>



