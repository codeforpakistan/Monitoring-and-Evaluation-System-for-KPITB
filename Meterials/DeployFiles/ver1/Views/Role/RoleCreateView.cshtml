@model ModelLayer.MainViewModel.CreateRoleVM
@{
    ViewBag.Title = "RoleCreateView";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<ModelLayer.MainViewModel.GetAllRoleVM> _LstAllRoles = (List<ModelLayer.MainViewModel.GetAllRoleVM>)ViewBag.LstAllRoles;
}

<!-- START row-->
<div class="row">
    <div class="col-xl-12">
           <!-- START card-->
            <div class="card card-default">
                <div class="card-header">
                    <div class="card-title"><h4>Role Form</h4></div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        @using (Html.BeginForm("RoleCreateView", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <div class="row">
                                <div class="col-lg-12">
                                    @Html.DisplayFor(m => m.RoleName, new { @class = "col-form-label" })
                                    @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control", @placeholder = "Please Enter RoleName" })
                                    @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "parsley-required" })
                                </div>
                            </div>

                            <br />
                            <div class="required float-left">* Required fields</div>
                            <div class="float-right">
                                <button class="btn btn-primary" type="submit">Save</button>
                            </div>
                            <!--Popup Msg-->

                            @*if (TempData["Message"] != null)
            {
                <div id="divMessage" class="alert alert-success d-inline-flex" role="alert">
                    <strong>@TempData["Message"]</strong>
                </div>
            }*@
                            <br />
                            <hr />
                        }
                        <!-- START card-->
                        <div class="card card-default">
                            <div class="card-body">
                                <form class="form-horizontal">
                                    <div class="form-row ">
                                        <div class="col-lg-10">
                                            <label for="sel1">Search By Role Name</label>
                                            <input class="select2 form-control" type="text" placeholder="Search By Role Name">
                                        </div>

                                        <div class="col-lg-1">
                                            <label for="sel1" style="color:transparent">]</label>
                                            <button class="btn btn-primary form-control" type="submit" id="btnSubmit">Search</button>
                                        </div>
                                        <div class="col-lg-1">
                                            <label for="sel1" style="color:transparent">]</label>
                                            <button class="btn btn-green form-control" type="submit" id="btnSubmit">Clear</button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                        <!-- END card-->
                        <div class="card card-default">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">

                                            <table class="table table-striped my-4 w-100  table-hover" id="datatable2">
                                                <thead>
                                                    <tr>

                                                        <th>
                                                            ID
                                                        </th>
                                                        <th class="col-lg-4">
                                                            Role
                                                        </th>
                                                        <th class="col-lg-6">
                                                            Status
                                                        </th>
                                                        <th class="col-lg-1">
                                                            Action
                                                        </th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        foreach (var item in _LstAllRoles)
                                                        {
                                                            <tr>
                                                                @Html.HiddenFor(m => item.RoleID)
                                                                <td>
                                                                    @item.ID
                                                                </td>
                                                                <td>
                                                                    @item.RoleName
                                                                </td>
                                                                <td>
                                                                    @item.IsActive
                                                                </td>
                                                                <td>
                                                                    @Html.ActionLink("Edit", "RoleEdit", new { RoleID = Utility.Encryption.EncryptURL(Convert.ToString(item.RoleID)) }, new { @class = "mb-1 btn btn-warning" })
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <!-- END card-->
       
    </div>
</div>



