@model ModelLayer.MainViewModel.GetProjectDetailsVM
<!-- Page content-->
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>

<!--Date-->
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<style>
    .highcharts-figure,
    .highcharts-data-table table {
        min-width: 320px;
        max-width: 800px;
        margin: 1em auto;
    }

    .highcharts-data-table table {
        font-family: Verdana, sans-serif;
        border-collapse: collapse;
        border: 1px solid #ebebeb;
        margin: 10px auto;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .highcharts-data-table caption {
        padding: 1em 0;
        font-size: 1.2em;
        color: #555;
    }

    .highcharts-data-table th {
        font-weight: 600;
        padding: 0.5em;
    }

    .highcharts-data-table td,
    .highcharts-data-table th,
    .highcharts-data-table caption {
        padding: 0.5em;
    }

    .highcharts-data-table thead tr,
    .highcharts-data-table tr:nth-child(even) {
        background: #f8f8f8;
    }

    .highcharts-data-table tr:hover {
        background: #f1f7ff;
    }

    input[type="number"] {
        min-width: 50px;
    }
</style>


<div class="content-heading">
    <div>
        Project Details
    </div>
</div>
<div class="col-xl-12">
    <!-- Main card-->
    <div class="card b">
        <div class="card-header">
            <div class="float-right mt-2">
                Project Type:
                <div class="badge badge-info">@Model.getProjectDetailsQ1.ProjectType</div>
            </div>
            <h4 class="my-2">
                <span>
                    @{
                        if (Model.getProjectDetailsQ6Lst.Count > 0)
                        {
                            @Model.getProjectDetailsQ6Lst[0].ProjectName
                        }
                    }
                </span>
            </h4>
        </div>
        <div class="card-body bb bt">
            <!-- START card-->
            <div class="card">
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col-sm-2">
                            <h3 class="m-0">
                                @{ Model.getProjectDetailsQ1.stackholder = Model.getProjectDetailsQ1 != null ? Model.getProjectDetailsQ1.stackholder : 0;}
                                @Model.getProjectDetailsQ1.stackholder
                            </h3>
                            <p class="m-0 bg-warning">Stakeholder</p>
                        </div>
                        <div class="col-sm-2">
                            <h3 class="m-0">
                                @{ Model.getProjectDetailsQ1.ActiveIssues = Model.getProjectDetailsQ1 != null ? Model.getProjectDetailsQ1.ActiveIssues : 0;}
                                @Model.getProjectDetailsQ1.ActiveIssues
                            </h3>
                            <p class="m-0 bg-warning">Active Issues</p>
                        </div>
                        <div class="col-sm-2">
                            <h3 class="m-0">
                                @{ Model.getProjectDetailsQ1.ActiveRisks = Model.getProjectDetailsQ1 != null ? Model.getProjectDetailsQ1.ActiveRisks : 0;}
                                @Model.getProjectDetailsQ1.ActiveRisks
                            </h3>
                            <p class="m-0 bg-warning">Active Risks</p>
                        </div>
                        <div class="col-sm-2">
                            <h3 class="m-0">
                                @{ Model.getProjectDetailsQ1.PlannedHR = Model.getProjectDetailsQ1 != null ? Model.getProjectDetailsQ1.PlannedHR : 0;}
                                @Model.getProjectDetailsQ1.PlannedHR
                            </h3>
                            <p class="m-0 bg-warning">Planned HR</p>
                        </div>
                        <div class="col-sm-2">
                            <h3 class="m-0">
                                @{ Model.getProjectDetailsQ1.RecruitedHR = Model.getProjectDetailsQ1 != null ? Model.getProjectDetailsQ1.RecruitedHR : 0;}
                                @Model.getProjectDetailsQ1.RecruitedHR
                            </h3>
                            <p class="m-0 bg-warning">Recruited HR</p>
                        </div>
                        <div class="col-sm-2">
                            <h3 class="m-0">
                                @{ Model.getProjectDetailsQ1.Funding_Source = Model.getProjectDetailsQ1 != null ? Model.getProjectDetailsQ1.Funding_Source : 0;}
                                @Model.getProjectDetailsQ1.Funding_Source
                            </h3>
                            <p class="m-0 bg-warning">Founding Source</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END card-->
        </div>

        <div class="row">
            <div class="col-xl-6">
                <div class="card b">
                    <div class="card-header">
                        <h4 class="m-0">Project KPIs</h4>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <td class="col-md-8">
                                    <strong>KPIs Name</strong>
                                </td>
                                <td class="col-md-8">
                                    <strong>Target</strong>
                                </td>
                                <td class="col-md-8">
                                    <strong>Achieved</strong>
                                </td>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.getProjectDetailsProjectKPIsLst)
                            {
                                <tr>
                                    <td>
                                        @item.IndicatorDescription
                                    </td>

                                    <td>
                                        @item.Target
                                    </td>
                                    <td>
                                        @item.Achived
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                    <hr />
                    <figure class="highcharts-figure w-100">
                        <div id="container"></div>
                    </figure>
                </div>

            </div>
            <div class="col-xl-6">
                <div class="card b">
                    <div class="card-header">
                        <h4 class="m-0">Impact Indicator</h4>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <td class="col-md-8">
                                    <strong>Impact Indicator Name</strong>
                                </td>
                                <td class="col-md-8">
                                    <strong>Achieved Value</strong>
                                </td>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.getProjectDetailsQ7Lst)
                            {
                                <tr>
                                    <td>
                                        @item.InsightIndicatorFieldName
                                    </td>

                                    <td>
                                        @item.CommonFiled
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <hr />
                    <figure class="highcharts-figure w-100">
                        <div id="ImpactIndicator"></div>
                    </figure>
                </div>

            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-xl-6">
                    <div class="card b">
                        <div class="card-header">
                            <h4 class="m-0">Financial Details</h4>
                        </div>

                        <table class="table">
                            <tbody>
                                <tr>
                                    <td class="col-md-8">
                                        <strong>Planned Budget</strong>
                                    </td>
                                    <td>

                                        @{ Model.getProjectDetailsQ2.FormatedResult = Model.getProjectDetailsQ2 != null ? Model.getProjectDetailsQ2.FormatedResult : "";}
                                        @Model.getProjectDetailsQ2.FormatedResult
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-md-8">
                                        <strong>Allocated Budget</strong>
                                    </td>
                                    <td>
                                        @{ Model.getProjectDetailsQ3.AllocatedBudget = Model.getProjectDetailsQ3 != null ? Model.getProjectDetailsQ3.AllocatedBudget : 0;}
                                        @Model.getProjectDetailsQ3.AllocatedBudget
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-md-8">
                                        <strong>Expenditure Budget</strong>
                                    </td>
                                    <td>
                                        @{ Model.getProjectDetailsQ3.ExpenditureBudget = Model.getProjectDetailsQ3 != null ? Model.getProjectDetailsQ3.ExpenditureBudget : 0;}
                                        @Model.getProjectDetailsQ3.ExpenditureBudget
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-md-8">
                                        <strong>Remaining Budget</strong>
                                    </td>
                                    <td>
                                        @{ Model.getProjectDetailsQ3.RemainingBudget = Model.getProjectDetailsQ3 != null ? Model.getProjectDetailsQ3.RemainingBudget : 0;}
                                        @Model.getProjectDetailsQ3.RemainingBudget
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <figure class="highcharts-figure w-100">
                            <div id="finance"></div>
                        </figure>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="card b">
                        <div class="card-header">
                            <h4 class="m-0">Project Schedule</h4>
                        </div>

                        <table class="table">
                            <tbody>
                                <tr>
                                    <td class="col-md-7">
                                        <strong>Planned Start Date</strong>
                                    </td>
                                    <td>

                                        @{ Model.getProjectDetailsQ4.PlannedDate = Model.getProjectDetailsQ4 != null ? Model.getProjectDetailsQ4.PlannedDate : Model.getProjectDetailsQ4.PlannedDate;}
                                        @Model.getProjectDetailsQ4.PlannedDate.ToShortDateString()
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-md-7">
                                        <strong>Actual Start Date</strong>
                                    </td>
                                    <td>
                                        @{ Model.getProjectDetailsQ4.ActualDate = Model.getProjectDetailsQ4 != null ? Model.getProjectDetailsQ4.ActualDate : Model.getProjectDetailsQ4.ActualDate;}
                                        @Model.getProjectDetailsQ4.ActualDate.ToShortDateString()
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-md-7">
                                        <strong>End Date</strong>
                                    </td>
                                    <td>
                                        @{ Model.getProjectDetailsQ4.EndDate = Model.getProjectDetailsQ4 != null ? Model.getProjectDetailsQ4.EndDate : Model.getProjectDetailsQ4.EndDate;}
                                        @Model.getProjectDetailsQ4.EndDate.ToShortDateString()
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <br />
                        <br />
                        @*<figure class="highcharts-figure w-100">
                               <div id="schedule"></div>
                            </figure>*@
                        <div id="timeline" style="height: 180px;"></div>
                    </div>

                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-6">
                <!-- START card-->
                <div class="card card-default card-demo" id="cardDemo3">
                    <div class="card-header">
                        Project Objective
                        <a class="float-right" href="#" data-tool="card-dismiss" data-toggle="tooltip" title="Close Card">
                            <em class="fa fa-times"></em>
                        </a>
                        <a class="float-right" href="#" data-tool="card-collapse" data-toggle="tooltip" title="Collapse Card">
                            <em class="fa fa-plus"></em>
                        </a>
                    </div>
                    <!-- .card-wrapper is the element to be collapsed-->
                    <div class="card-wrapper collapse">
                        <div class="card-body">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td>
                                            @{
                                                if (Model.getProjectDetailsQ5 != null)
                                                {
                                                    { Model.getProjectDetailsQ5.ObjectiveName = Model.getProjectDetailsQ5 != null ? Model.getProjectDetailsQ5.ObjectiveName : ""; }
                                                    @Model.getProjectDetailsQ5.ObjectiveName
                                                }
                                               else
                                               {
                                               
                                               }
                                            }

                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
                <!-- END card-->
            </div>
            <div class="col-lg-6">
                <!-- START card-->
                <div class="card card-default card-demo" id="cardDemo3">
                    <div class="card-header">
                        Project Issues
                        <a class="float-right" href="#" data-tool="card-dismiss" data-toggle="tooltip" title="Close Card">
                            <em class="fa fa-times"></em>
                        </a>
                        <a class="float-right" href="#" data-tool="card-collapse" data-toggle="tooltip" title="Collapse Card">
                            <em class="fa fa-plus"></em>
                        </a>
                    </div>
                    <!-- .card-wrapper is the element to be collapsed-->
                    <div class="card-wrapper collapse">
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <td>
                                            Description
                                        </td>
                                        <td>
                                            Issue Date
                                        </td>
                                        <td>
                                            Action Tkaen
                                        </td>
                                        <td>
                                            Remarks
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        foreach (var item in Model.getProjectDetailsIssuesLst)
                                        {
                                            <tr>
                                                <td>
                                                    @item.IssueDescription
                                                </td>
                                                <td>
                                                    @item.IssueDate.
                                                </td>
                                                <td>
                                                    @item.ActionTaken
                                                </td>
                                                <td>
                                                    @item.Remarks
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
                <!-- END card-->
            </div>
        </div>


    </div>
</div>


<script>
     //KPIS
      Highcharts.chart('container', {
        chart: {
            type: 'column'
        },
        title: {
            text: 'Project KPIs %'
        },
        subtitle: {
            text: ''
        },
        accessibility: {
            announceNewData: {
                enabled: true
            }
        },
        xAxis: {
            type: 'category'
        },
        yAxis: {
            title: {
                text: 'Percent of each KPIs'
            }

        },
        legend: {
            enabled: false
        },
        plotOptions: {
            series: {
                borderWidth: 0,
                dataLabels: {
                    enabled: true,
                    format: '{point.y:.1f}%'
                }
            }
        },
        tooltip: {
            headerFormat: '<span style="font-size:12px">{series.name}</span><br>',
            pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y:.2f}%</b> of total<br/>'
        },
        series: [
            {
                name: "Finance",
                colorByPoint: true,
                data: [
                    @{
                    foreach (var item in Model.getProjectDetailsProjectKPIsLst)
                    {
                       @Html.Raw($"{{ name: \"{item.IndicatorDescription}\", y: {item.Percentage} }},")
                    }
                } ]

            }
        ]

    });

    //ImpactIndicator
    Highcharts.chart('ImpactIndicator', {
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie'
        },
        title: {
            text: 'Impact Indicator'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        accessibility: {
            point: {
                valueSuffix: '%'
            }
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                }
            }
        },
        series: [{
            name: 'Impact Indicator',
            colorByPoint: true,
            data: [
                @{
                    foreach (var item in Model.getProjectDetailsQ7Lst)
                    {
                       @Html.Raw($"{{ name: \"{item.InsightIndicatorFieldName}\", y: {item.CommonFiled} }},")
                    }
                }
            ]
        }]
    });

    //Finance
    Highcharts.chart('finance', {
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie'
        },
        title: {
            text: 'Budget Utalization'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        accessibility: {
            point: {
                valueSuffix: '%'
            }
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                }
            }
        },
        series: [{
            name: 'Total',
            colorByPoint: true,
            data: [
                {
                        name: "Planned Budget",
                        y: @Model.getProjectDetailsQ3.PlannedBudget
                        /*drilldown: "Chrome"*/
                    },{
                           name: "Allocated Budgett",
                           y: @Model.getProjectDetailsQ3.AllocatedBudget
                        /*drilldown: "Chrome"*/
                    }, {
                        name: "Expenditure Budgett",
                        y: @Model.getProjectDetailsQ3.ExpenditureBudget
                        /*drilldown: "Chrome"*/
                    }, {
                        name: "Remaining Budgett",
                        y: @Model.getProjectDetailsQ3.RemainingBudget
                        /*drilldown: "Chrome"*/
                    }
                 ]
        }]
    });

    //schedule
    google.charts.load('current', { 'packages': ['timeline'] });
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {
        var container = document.getElementById('timeline');
        var chart = new google.visualization.Timeline(container);
        var dataTable = new google.visualization.DataTable();

        dataTable.addColumn({ type: 'string', id: 'President' });
        dataTable.addColumn({ type: 'date', id: 'Start' });
        dataTable.addColumn({ type: 'date', id: 'End' });
        dataTable.addRows([
            ['planned Date', new Date(@Model.getProjectDetailsQ4.PlannedDate.Year,@Model.getProjectDetailsQ4.PlannedDate.Month, @Model.getProjectDetailsQ4.PlannedDate.Day), new Date(@Model.getProjectDetailsQ4.PlannedDate.Year,@Model.getProjectDetailsQ4.PlannedDate.Month, @Model.getProjectDetailsQ4.PlannedDate.Day)],
            ['Start Date', new Date(@Model.getProjectDetailsQ4.PlannedDate.Year,@Model.getProjectDetailsQ4.PlannedDate.Month, @Model.getProjectDetailsQ4.PlannedDate.Day), new Date(@Model.getProjectDetailsQ4.ActualDate.Year,@Model.getProjectDetailsQ4.ActualDate.Month, @Model.getProjectDetailsQ4.ActualDate.Day)],
            ['End Date', new Date(@Model.getProjectDetailsQ4.ActualDate.Year,@Model.getProjectDetailsQ4.ActualDate.Month, @Model.getProjectDetailsQ4.ActualDate.Day), new Date(@Model.getProjectDetailsQ4.EndDate.Year,@Model.getProjectDetailsQ4.EndDate.Month, @Model.getProjectDetailsQ4.EndDate.Day)]
        ]);

        chart.draw(dataTable);
    }









</script>

